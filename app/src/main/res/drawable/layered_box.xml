<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:left="5dp" android:top="5dp">
        <shape>
            <size
                android:width="100dp"
                android:height="100dp" />
            <solid android:color="#000000" /> <!-- Shadow color with transparency -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Main box layer -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <size
                android:width="100dp"
                android:height="100dp" />
            <gradient
                android:startColor="#38B0F5"
                android:endColor="#FF3CE7CA"
                android:angle="45" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
